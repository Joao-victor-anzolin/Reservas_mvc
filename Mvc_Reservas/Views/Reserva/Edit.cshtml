@model Mvc_Reservas.Models.Reserva

@{
    ViewData["Title"] = "Edit | Reservas";
}

<h1>Edit</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 mt-3>
                <label asp-for="Id" class="control-label"></label>
                <input name="inId" asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Acomodacao" class="control-label"></label>
                <input name="inAcomodacao" asp-for="Acomodacao" class="form-control" />
                <span asp-validation-for="Acomodacao" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3 ">
                <label class="form-check-label">
                    <input asp-for="CafeIncluso" name="inCafeIncluso" class="form-check-input" /> @Html.DisplayNameFor(model => model.CafeIncluso)
                    <br />

                </label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataChegada" class="control-label"></label>
                <input asp-for="DataChegada" name="inDataChegada" type="date" value="@Model.DataChegada.ToString("yyyy-MM-dd")" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataSaida" class="control-label"></label>
                <input asp-for="DataSaida" name="inDataSaida" type="date" value="@Model.DataSaida.ToString("yyyy-MM-dd")" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Total" class="control-label"></label>
                <input name="inTotal" asp-for="Total" type="number" step=".01" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button asp-controller="Reserva" class="btn btn-primary" asp-action="Save">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
