@model Mvc_Reservas.Models.Reserva

@{
    ViewData["Title"] = "Adicionar | Reservas";
}

<h1>Adicionar Reserva</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-4">
                <label asp-for="Id" class="control-label"></label>
                <input name="inId" type="text" class="form-control" readonly />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Acomodacao" class="control-label"></label>
                <input name="inAcomodacao" type="text" class="form-control"/>
            </div>

            <div class="form-group form-check mb-4 ">
                <label class="form-check-label">
                    <input name="inCafeIncluso" class="form-check-input" asp-for="CafeIncluso" /> @Html.DisplayNameFor(model => model.CafeIncluso)
                    
                </label>
            </div>

            <div class="form-group mb-4">
                <label asp-for="DataChegada" class="control-label"></label>
                <input name="inDataChegada" type="date" class="form-control" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="DataSaida" class="control-label"></label>
                <input name="inDataSaida" type="date" class="form-control" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Total" class="control-label"></label>
                <input name="inTotal" type="number" class="form-control" />
            </div>

            <div class="form-group">
                <button asp-controller="Reserva" class="btn btn-primary" asp-action="Save">Salvar</button>
                <button asp-controller="Reserva" class="btn btn-secondary" asp-action="Cancel">Cancelar</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
